{
  "name": "npm-helper",
  "displayName": "NPM Helper",
  "main": "./out/extension.js",
  "description": "Track changes on packages.json and show restore warning if need.",
  "version": "1.0.1",
  "publisher": "karanba",
  "repository": {
    "type": "git",
    "url": "https://github.com/karanba/npm-helper.git"
  },
  "bugs": {
    "url": "https://github.com/karanba/npm-helper/issues"
  },
  "homepage": "https://github.com/karanba/npm-helper/blob/master/README.md",
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#96DFFF",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.31.0"
  },
  "keywords": [
    "npm",
    "packages.json",
    "install",
    "npm install",
    "restore"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:./package.json",
    "onCommand:dependencies.refreshEntry"
  ],
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "NPM Helper",
        "properties": {}
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dependencies",
          "name": "Dependencies",
          "when": ""
        }
      ]
    },
    "commands": [
      {
        "command": "dependencies.checkRestore",
        "title": "Check npm packages",
        "category": "npm"
      },
      {
        "command": "dependencies.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/svg/folder.svg",
          "dark": "resources/svg/folder.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "",
          "command": "dependencies.checkRestore",
          "group": "npm"
        }
      ]
    },
    "keybindings": [
      {
        "command": "dependencies.checkRestore",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": ""
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "test": "node ./node_modules/vscode/bin/test",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/semver": "^5.5.0",
    "compare-versions": "^3.4.0",
    "eslint": "^5.13.0",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "semver": "^5.6.0"
  }
}
